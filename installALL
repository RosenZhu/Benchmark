# libsass
mkdir /downloads/bins/libsass
tar -xzf libsass-3.5.0.tar.gz
cd libsass-3.5.0
autoreconf --force --install
./configure --disable-shared --disable-tests --prefix=/downloads/bins/libsass CC=gcc CXX=g++  CFLAGS="-g" CXXFLAGS="-g"
make -j4
make -j4 install

